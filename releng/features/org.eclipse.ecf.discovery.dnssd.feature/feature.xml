<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.eclipse.ecf.discovery.dnssd.feature"
      label="ECF Discovery DNS-SD Provider"
      version="1.1.0.qualifier"
      provider-name="%providerName"
      license-feature="org.eclipse.license"
      license-feature-version="0.0.0">

   <description url="http://www.eclipse.org/ecf">
      This feature provides the ECF Discovery DNS-SD Provider.  This provider can be used by ECF Remote Services Discovery to publish and discover RS EndpointDescriptions.
   </description>

   <copyright>
      %copyright
   </copyright>

   <license url="%licenseURL">
      %license
   </license>

   <requires>
      <import feature="org.eclipse.ecf.discovery.feature" version="1.0.0" match="compatible"/>
   </requires>

   <plugin
         id="org.eclipse.ecf.provider.dnssd"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.xbill.dns"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
